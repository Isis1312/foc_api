generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model roles {
  id         Int       @id @default(autoincrement())
  name       String    @unique @db.VarChar(100)
  status     Boolean   @default(true)
  created_at DateTime  @default(now())
  updated_at DateTime  @default(now())
  deleted_at DateTime?
  users      users[]
}

model users {
  id         Int       @id @default(autoincrement())
  name       String?   @db.VarChar(100)
  username   String    @unique @db.VarChar(100)
  email      String    @unique @db.VarChar(100)
  password   String    @db.VarChar(255)
  role       roles     @relation(fields: [role_id], references: [id])
  role_id    Int
  status     Boolean   @default(true)
  created_at DateTime  @default(now())
  updated_at DateTime  @default(now())
  deleted_at DateTime?
}

model test {
  id         Int       @id @default(autoincrement())
  name       String    @unique @db.VarChar(100)
  status     Boolean   @default(true)
  created_at DateTime  @default(now())
  updated_at DateTime  @default(now())
  deleted_at DateTime?
}

//--MAESTRAS NIVEL 1--//
model categories {
  id         Int       @id @default(autoincrement())
  name       String    @unique @db.VarChar(100)
  status     Boolean   @default(true)
  created_at DateTime  @default(now())
  updated_at DateTime  @default(now())
  deleted_at DateTime?
  products   products[]
}

model warehauses {
  id         Int       @id @default(autoincrement())
  name       String    @unique @db.VarChar(100)
  status     Boolean   @default(true)
  created_at DateTime  @default(now())
  updated_at DateTime  @default(now())
  deleted_at DateTime?
  areas       areas[]
}

//--DEPENDIENTES NIVEL 2--//
model areas {
  id         Int       @id @default(autoincrement())
  name       String   @unique @db.VarChar(100)
  warehause       warehauses     @relation(fields: [warehauses_id ], references: [id])
  warehauses_id    Int
  status     Boolean   @default(true)
  created_at DateTime  @default(now())
  updated_at DateTime  @default(now())
  deleted_at DateTime?
  products   products[]
}


//--DEPENDIENTES NIVEL 3--//

model products {
  id              Int       @id @default(autoincrement())
  name            String    @db.VarChar(255)
  price           Float
  quantity        Int
  category        categories @relation(fields: [category_id], references: [id])
  category_id     Int
  area            areas     @relation(fields: [area_id], references: [id])
  area_id         Int
  status          Boolean   @default(true)
  created_at      DateTime  @default(now())
  updated_at      DateTime  @default(now())
  deleted_at      DateTime?
  
  @@unique([name, area_id])
}